{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node",
      "@types/w3c-web-serial",
      "@types/web-bluetooth"
    ],
    "paths": {
      "@app/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@core/*": ["src/core/*"],
      "@layouts/*": ["src/layouts/*"],
      "@meshtastic/core": ["src/packages/core/mod.ts"],
      "@meshtastic/transport-http": ["src/packages/transport-http/mod.ts"],
      "@meshtastic/transport-web-bluetooth": ["src/packages/transport-web-bluetooth/mod.ts"],
      "@meshtastic/transport-web-serial": ["src/packages/transport-web-serial/mod.ts"],
      "@meshtastic/ui": ["src/packages/ui/src/index.ts"],
      "@meshtastic/protobufs-ws": ["src/packages/protobufs/packages/ts/mod.ts"],
      "@meshtastic/protobufs": ["src/packages/protobufs/packages/ts/mod.ts"]
    }
  },
  "include": ["src", "src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist", "web/src/packages/protobufs/node_modules"]
}
